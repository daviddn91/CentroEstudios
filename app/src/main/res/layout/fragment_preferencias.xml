<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.david.centroestudios.fragments.FragmentPreferencias">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:paddingLeft="5sp"
        android:layout_gravity="top">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" "
                android:id="@+id/textView7"
                android:textSize="7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tipo_centro"
                android:id="@+id/textView3"
                android:height="25dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/publico"
                android:id="@+id/switch3"
                android:checked="true"
                android:height="35dp"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/concertado"
                android:id="@+id/switch4"
                android:checked="true"
                android:height="35dp"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privado"
                android:id="@+id/switch5"
                android:checked="true"
                android:height="35dp"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" "
                android:id="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/creencias_religiosas"
                android:id="@+id/textView9"
                android:height="25dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup2" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/religioso"
                    android:id="@+id/radioButton4"
                    android:checked="false"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/laico"
                    android:id="@+id/radioButton5"
                    android:checked="false"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ambos"
                    android:id="@+id/radioButton6"
                    android:checked="true"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" "
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/genero"
                android:id="@+id/textView2"
                android:height="25dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/solo_ninas"
                    android:id="@+id/radioButton"
                    android:checked="false"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/solo_ninos"
                    android:id="@+id/radioButton2"
                    android:checked="false"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mixto"
                    android:id="@+id/radioButton3"
                    android:checked="true"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" "
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/idiomas"
                android:id="@+id/textView6"
                android:height="25dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/castellano"
                android:id="@+id/switch7"
                android:checked="true"
                android:textSize="16sp"
                android:height="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="false"
                android:enabled="false" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/catalan"
                android:id="@+id/switch9"
                android:checked="true"
                android:textSize="16sp"
                android:height="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="false"
                android:enabled="false"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingles"
                android:id="@+id/switch8"
                android:textSize="16sp"
                android:checked="true"
                android:height="35dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frances"
                android:id="@+id/switch11"
                android:textSize="16sp"
                android:checked="false"
                android:height="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aleman"
                android:id="@+id/switch10"
                android:checked="false"
                android:textSize="16sp"
                android:height="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView12" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
